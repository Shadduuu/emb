TCP 
Myserver
import java.net.*;
import java.io.*;
import java .util.*;

public class Myserver 
{
    public static void main(String[] args) 
    {
        try
        {
            ServerSocket ss = new ServerSocket(3045);       // portno.
            System.out.println("-----SERVER-----");
            System.out.println("Waiting For Client");
            Socket server = ss.accept();
            System.out.println("Client Is Now Connected To Server");
            
            // Send Data From TCPServer To Client
            Scanner sc = new Scanner(System.in);
            PrintWriter pw=new PrintWriter(server.getOutputStream());
            while(true)
            {
                System.out.print("Enter Data : ");
                String data=sc.nextLine();
                pw.println("Data from Server : "+data);
                pw.flush();
                if(data.equals("exit"))
                    break;
            }
            

        }
        catch(Exception ex)
        {
            System.out.println("Problem Occur In Connecting to The Sever ");
        }
    }
}

Myclient
import java.net.*;
import java.io.*;

public class Myclient 
{
    public static void main(String[] args) 
    {

        try
        {
            System.out.println("-----CLIENT-----");
            Socket client = new Socket("localhost",3045);
            System.out.println(" You Are Connected To Server");

            //read Data From Server 
            BufferedReader br = new BufferedReader(new InputStreamReader(client.getInputStream()));
           while (true)
           {
               String data=br.readLine();
               System.out.println(data);
               if(data.equals("exit"))
               {
                   System.out.println("Connection Ended");
                   break;
               }
           }
           client.close();
           br.close();

        }
        catch(SocketException e)
        {
            System.out.println("Connection Ended ");
        }
        catch (Exception ex)
        {
            System.out.println("Error Occured On Connecting To Server ");
        }
    }
    
}
